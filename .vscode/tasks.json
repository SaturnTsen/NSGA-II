{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with Make",
      "type": "shell",
      "command": "make",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "options": {
        "cwd": "${workspaceFolder}/build"
      }
    },
    {
      "label": "Run Executable",
      "type": "shell",
      "command": "./nsgaii",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/build"
      }
    }
  ]
}
