{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 16,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default (Debug)",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTS": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "Release (No Tests)",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TESTS": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "defaultBuild",
            "displayName": "Build with Debug + Tests",
            "configurePreset": "default"
        },
        {
            "name": "releaseBuild",
            "displayName": "Build with Release (No Tests)",
            "configurePreset": "release"
        }
    ],
    "testPresets": [
        {
            "name": "defaultTest",
            "displayName": "Run Tests in Debug Mode",
            "configurePreset": "default",
            "execution": {
                "jobs": 4
            }
        },
        {
            "name": "releaseTest",
            "displayName": "Run Tests in Release Mode",
            "configurePreset": "release",
            "execution": {
                "jobs": 4
            }
        }
    ]
}